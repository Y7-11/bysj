@section FooterScript
{
    <script type="text/javascript">
        $(function () {
            $("#addbtn").click(function () {

                var formData = $("#form_addline").serializeArray();
                var addurl = "/Lines/AddLines?gid=" + '@ViewBag.gid';
                $.ajax({
                    url: addurl,
                    type: "post",
                    data: formData,
                    dataType: "json",
                    success: function (res) {
                        if (res.status == "ok") {
                            alert("ok");
                            location.href = "/Lines/InfoList?lid="+res.data;
                            //location.href = "/Main/index";
                        }
                        else {
                            alert("不可为空！");
                        }
                    },
                    error: function () { alert("出错"); }
                });
            });



        });

    </script>


}