
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "添加游记";

}
<div class="b_wrap">
    <div class="current"><span>当前所在地：</span><a href="~/Main/Index">首页</a> >> <a href="~/Main/Center">会员中心</a> >> <a href="~/Main/MyLines">预定与路线</a></div>
    <div class="fmember">
        <form action="" method="post" id="form_addline">
            <div class="fmr1">
                <div class="fmr1_top">添加游记</div>
                <div class="fmr1_m">
                    <div class="forder" style="text-align:center;">
                        <table style="margin:auto;">
                            <tr style="height:60px;width:800px;font-size:20px"><td style="color:red;">标题：</td><td><input type="text" class="ipt" style="width:400px" name="title" /></td></tr>
                            <tr style="height:60px;width:800px;font-size:20px"><td style="color:red;">文章：</td><td><textarea type="text" class="ipt" style="height:150px;width:400px" name="content" MulTiline="true"></textarea></td></tr>
                            @*<tr style="height:60px;width:800px;font-size:20px"><td><input type="button" value="提交" style="height:35px;width:100px;" /></td></tr>*@
                        </table>

                        <input id="addbtn" type="button" value="发表" style="height:35px;width:100px;margin:auto;margin-bottom:15px;" />
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>


@section FooterScript
{
    <script type="text/javascript">
        $(function () {
            $("#addbtn").click(function () {

                var formData = $("#form_addline").serializeArray();
                $.ajax({
                    url: "/Travels/AddTravels",
                    type: "post",
                    data: formData,
                    dataType: "json",
                    success: function (res) {
                        if (res.status == "ok") {
                            alert("ok");
                            @*location.href = "/Lines/AddLines?lid="+'@ViewBag.lid';*@
                            location.href = "/Main/index";
                        }
                        else {
                            alert("错误");
                        }
                    },
                    error: function () { alert("出错"); }
                });
            });



        });

    </script>


}
