@model DTO.UserDTO
@{
    ViewBag.Title = "用户查看";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cl pd-20" style=" background-color:#5bacb6">
    <img class="avatar size-XL l" src="~/images/user.png">
    <dl style="margin-left:80px; color:#fff">
        <dt><span class="f-18">@Model.PhoneNum</span></dt>
        <dd class="pt-10 f-12" style="margin-left:0">@Model.Remark</dd>
    </dl>
</div>
<div class="pd-20">
    <table class="table">
        <tbody>
            <tr>
                <th class="text-r" width="80">性别：</th>
                <td>男</td>
            </tr>
            <tr>
                <th class="text-r">手机：</th>
                <td>@Model.PhoneNum</td>
            </tr>
            <tr>
                <th class="text-r">邮箱：</th>
                <td>@Model.Email</td>
            </tr>
            @*<tr>
                <th class="text-r">地址：</th>
                <td>北京市 海淀区</td>
            </tr>*@
            <tr>
                <th class="text-r">注册时间：</th>
                <td>@Model.CreateDateTime</td>
            </tr>
        </tbody>
    </table>
</div>
